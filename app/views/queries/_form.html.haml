= form_for @query do |f|
  - if @query.errors.any?
    #error_explanation
      %h2= "#{pluralize(@query.errors.count, "error")} prohibited this query from being saved:"
      %ul
        - @query.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :from
    = f.text_field :from
  .field
    = f.label :to
    = f.text_field :to
  .field
    = f.label :origin_lat
    = f.text_field :origin_lat
  .field
    = f.label :origin_lon
    = f.text_field :origin_lon
  .field
    = f.label :dest_lat
    = f.text_field :dest_lat
  .field
    = f.label :dest_lon
    = f.text_field :dest_lon
  .actions
    = f.submit 'Save'
