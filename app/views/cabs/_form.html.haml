= form_for @cab do |f|
  - if @cab.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cab.errors.count, "error")} prohibited this cab from being saved:"
      %ul
        - @cab.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :company
    = f.check_box :company
  .field
    = f.label :reg
    = f.text_field :reg
  .field
    = f.label :verified
    = f.check_box :verified
  .field
    = f.label :phone_number
    = f.text_field :phone_number
  .actions
    = f.submit 'Save'
